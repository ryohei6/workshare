<head>
<style>

.outer{
  position: relative;
}
.inner{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 80%;
  height: 3.2rem;

}
</head>
</style>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        お仕事一覧
      </h1>
    </div>
  </div>
</section>

<p>検索</p>
<%= form_tag(posts_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>


<% @posts.each do |post| %>

<section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-7">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= post.title %></p>
                </div>
              </div>
              <div class="content">
              <%= link_to "詳細はこちら", "/details/#{post.id}"  %>
                <table class="table is-narrow">
                  <tr>
                    <th>依頼内容</th>
                  </tr>
                  <tr>
                    <td><%= simple_format post.body %></td>
                  </tr>

                  <tr>
                  <th>依頼金額</th>
                  </tr>
                  <tr>
                    <td><%= simple_format post.price %></td>
                  </tr>
                </table>
                <% if post.user.id == current_user.id %>
                  <%= link_to "編集画面へ", edit_post_path(post), class: "button is-success" %>
                  <%= link_to "削除ボタン", "/posts/#{post.id}", method: :delete, data:{confirm: "削除しますか？"}, class: "button is-success" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
  
        <div class="column is-4">
          <article class="panel is-link">
            <p class="panel-heading">
              By <%= post.user.username %>
            </p>
            <div class="panel-block">
              <p class="control">
                <%= post.user.profile %>
              </p>
            </div>
            <%= link_to user_path(post.user), class: "panel-block" do %>
              <span class="panel-icon">
                <i class="fas fa-user" aria-hidden="true"></i>
              </span>
              <%= post.user.username %> さんのページへ
            <% end %>
          </article>
        </div>
      </div>
    </div>
  </section>
<% end %>

<div class="outer">
  <div class="inner">
  <%= paginate @posts %>
  </div>
</div>




